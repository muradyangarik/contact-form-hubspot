{
    "name": "contact-form-hubspot/wordpress-plugin",
    "description": "A WordPress contact form plugin with Gutenberg block, REST API, and HubSpot integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "yoast/phpunit-polyfills": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=phpcs.xml",
        "lint:fix": "phpcbf --standard=phpcs.xml",
        "install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root root localhost latest"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "ContactFormHubSpot\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ContactFormHubSpot\\Tests\\": "tests/"
        }
    }
}



